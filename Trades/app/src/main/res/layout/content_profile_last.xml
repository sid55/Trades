<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmps115.trades.ProfileLast">

    <Button
        android:id="@+id/imageSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Image"
        android:textSize="10sp"
        android:onClick="btnClick"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_alignBottom="@+id/image"
        android:layout_toLeftOf="@+id/image" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="102dp"
        android:layout_height="95dp"
        android:src = "@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginRight="99dp"
        android:layout_marginEnd="99dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageSubmit"
        android:layout_alignStart="@+id/imageSubmit"
        android:layout_below="@+id/imageSubmit"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/firstName"
        android:layout_toEndOf="@+id/imageSubmit"
        android:layout_toRightOf="@+id/imageSubmit"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last" />

    <EditText
        android:id="@+id/email"
        android:layout_width="227dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/firstName"
        android:layout_alignStart="@+id/firstName" />


    <EditText
        android:id="@+id/phone"
        android:layout_width="227dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="phone"
        android:text="Phone #"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Save Profile"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="41dp" />

</RelativeLayout>
